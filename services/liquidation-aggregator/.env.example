# Liquidation Aggregator Environment Configuration Template
# NEVER commit real credentials - use environment variables only

# API Keys (REQUIRED - Replace with your actual keys)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
HYPERLIQUID_API_KEY=your_hyperliquid_api_key_here
HYPERLIQUID_API_SECRET=your_hyperliquid_api_secret_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=liquidations
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# Application Settings
LOG_LEVEL=INFO
MAX_CONNECTIONS=100
WEBSOCKET_TIMEOUT=60
HEALTH_CHECK_PORT=8080
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_CEX_MONITORING=true
ENABLE_DEX_MONITORING=true
ENABLE_ALERTS=true
ENABLE_METRICS=true